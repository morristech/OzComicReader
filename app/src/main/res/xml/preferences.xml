<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/general">

        <SwitchPreference
            android:key="KEY_PREFERENCES_THEME"
            android:defaultValue="false"
            android:title="@string/night_mode"
            android:summaryOn="On"
            android:summaryOff="Off" />

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/pref_sort_titles"
            android:entryValues="@array/pref_sort_values"
            android:key="KEY_PREFERENCES_SORT"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/sort_by" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/viewer">

        <SwitchPreference
            android:key="KEY_PREFERENCES_ANIMATION"
            android:defaultValue="true"
            android:title="@string/enable_page_animation"
            android:summaryOn="On"
            android:summaryOff="Off" />

    </PreferenceCategory>

</PreferenceScreen>