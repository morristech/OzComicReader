<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.jmoral.ozreader.activities.viewer.ViewerActivity">

    <es.jmoral.ozreader.custom.FixedViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/textViewPage"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:paddingStart="9dp"
        android:paddingLeft="9dp"
        android:paddingTop="8dp"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingTop="15dp"
        android:paddingBottom="@dimen/dimen_30dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:background="#59000000"
        android:minHeight="6dp"
        android:maxHeight="6dp"
        android:progressDrawable="@drawable/seekbar_color"
        android:thumb="@drawable/thumb_image"/>

</FrameLayout>
